            <Button
                Width="100"
                Height="30"
                Margin="0,20,0,0"
                Command="{Binding AddMealPlan}"
                CommandParameter="{Binding}">
                <TextBlock Text="Tilføj madplan" />
            </Button>

        </StackPanel>
    </Grid>
</UserControl>
